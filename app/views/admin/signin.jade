include ../mixin

doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    block title
      title 需要登录 | AKESO 后台管理
    link(rel="stylesheet" href=CDN("/assets/css/vendor.css"))
    link(rel="stylesheet" href=CDN("/assets/css/application.css"))
    script(src=CDN("/assets/js/lib/modernizr.js"))
    script(src=CDN("/assets/js/lib/jquery.min.js"))
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    
  body.signin
    .logo
      img(src=CDN("/assets/images/logo-white.svg"))
    form.form(action="/admin/signin" method="post")
      if error
        .error
          +fa("warning")
          = "  " + error
      input(
        type="email"
        name="email"
        placeholder="电子邮箱地址"
      )
      input(
        type="password"
        name="password"
        placeholder="密码"
      )
      button.button.submit.blue 登录

